<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                    <stroke android:width="1dp" android:color="@color/login_logo_bg" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            <item android:right="12dp">
                <bitmap android:gravity="center_vertical|right" android:src="@drawable/ic_arrow_drop_down" android:tint="@color/black" />
            </item>
        </layer-list>
    </item>
</selector>